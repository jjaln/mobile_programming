<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DailyChart" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorBackground">@color/bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/bg</item>
        <item name="colorPrimaryDark">@color/bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="DailyChart.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/bg</item>
        <item name="colorPrimaryDark">@color/bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="Popup">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>
</resources>